# Reload functions
# super + Escape
# 	slock

super + shift + alt + k
    killall -SIGUSR1 sxhkd

super + Escape
    slock

super + shift + d
    dmenu-display-config

super + shift + p
    j4-dmenu-desktop --dmenu="dmenu"

super + shift + v
	dmenu-greenclip

super + shift + o
	dmenu-qutebrowser

super + shift + r
	dmenu-remmina

super + shift + t
    dmenu-networkmanager

super + shift + s
    dmenu-audio-select

super + shift + l
    dmenu-lastpass copy

super + ctrl + c
    google-chrome

super + ctrl + x
    firefox

super + ctrl + e
    evolution

super + ctrl + f
    kitty --class="rangerfm" -e ranger

XF86AudioRaiseVolume
	volume up

XF86AudioLowerVolume
	volume down

XF86AudioMute
    volume mute

super + F1
    volume mute

super + F2
    volume down

super + F3
    volume up

super + F4
    playerctl play-pause

super + F5
    playerctl previous

super + F6
    playerctl next
