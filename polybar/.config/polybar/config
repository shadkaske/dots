[bar/spectrwm]
width = 100%
height = 24
radius = 0.0
fixed-center = true
bottom = false
separator = |

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = true

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 3
module-margin-right = 3

;https://github.com/jaagr/polybar/wiki/Fonts
font-0 = "Cantarell Regular:pixelsize=10:antialias=true"
font-1 = "FontAwesome:fontformat=truetype:size=10:antialias=true"
font-2 = "JetBrainsMono Nerd Font:pixelsize=10";1

scroll-up = spectrwm-desknext
scroll-down = spectrwm-deskprev

[bar/spectrwm-primary]
inherit = bar/spectrwm
monitor = ${env:MONITOR}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

wm-restack = bspwm
override-redirect = true

modules-left = ewmh xwindow
modules-center = mpd
modules-right = pulseaudio memory cpu date

tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-maxsize = 20
tray-scale = 1.0
tray-position = right
tray-background = ${colors.background}
tray-transparent = true

[bar/spectrwm-secondary]
inherit = bar/spectrwm
monitor = ${env:MONITOR}

modules-left = ewmh xwindow
modules-center =
modules-right =

